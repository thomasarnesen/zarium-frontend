{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://zarium.b2clogin.com/zarium.onmicrosoft.com/v2.0/.well-known/openid-configuration?p=B2C_1_signup_signin",
          "clientIdSettingName": "AADB2C_PROVIDER_CLIENT_ID",
          "clientSecretSettingName": "AADB2C_PROVIDER_CLIENT_SECRET"
        },
        "login": {
          "nameClaimType": "name",
          "scopes": ["openid", "profile", "email"]
        }
      },
      "google": {
        "registration": {
          "clientIdSettingName": "GOOGLE_CLIENT_ID",
          "clientSecretSettingName": "GOOGLE_CLIENT_SECRET"
        }
      }
    },
    "defaultProvider": "azureActiveDirectory",
    "userDetailsClaim": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
    "authorizedTokenIssuers": ["https://zarium.b2clogin.com/zarium.onmicrosoft.com/v2.0/"]
  },
  "routes": [
    {
      "route": "/robots.txt",
      "serve": "/robots.txt",
      "statusCode": 200,
      "headers": { "Content-Type": "text/plain" }
    },
    {
      "route": "/sitemap.xml",
      "serve": "/sitemap.xml",
      "statusCode": 200,
      "headers": { "Content-Type": "application/xml" }
    },
    {
      "route": "/api/auth/google/*",
      "methods": ["GET", "POST", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "backendUri": "https://zarium-app-ddbnb4egcpf4e6b0.westeurope-01.azurewebsites.net/api/auth/google/*"
    },
    {
      "route": "/api/auth/microsoft/*",
      "methods": ["GET", "POST", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "backendUri": "https://zarium-app-ddbnb4egcpf4e6b0.westeurope-01.azurewebsites.net/api/auth/microsoft/*"
    },
    {
      "route": "/auth/callback",
      "methods": ["GET", "POST", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "serve": "/index.html"
    },
    {
      "route": "/logout-callback",
      "methods": ["GET", "POST", "OPTIONS"],
      "allowedRoles": ["anonymous", "authenticated"],
      "serve": "/index.html"
    },
    {
      "route": "/api/auth/*",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "backendUri": "https://zarium-app-ddbnb4egcpf4e6b0.westeurope-01.azurewebsites.net/api/auth/*"
    },
    {
      "route": "/welcome",
      "allowedRoles": ["authenticated"],
      "serve": "/index.html"
    },
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "backendUri": "https://zarium-app-ddbnb4egcpf4e6b0.westeurope-01.azurewebsites.net/api/*"
    },
    {
      "route": "/(login|register|logout|verify-token|csrf-token|health|generate-macro*|download/*|create-checkout-session|webhook|cancel-subscription|subscription-status|generations|reactivate-subscription|schedule-plan-change|cancel-plan-change|send-verification|verify-code|user/current|user/tokens|refresh-token|request-password-reset|reset-password|register/check-email)",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "backendUri": "https://zarium-app-ddbnb4egcpf4e6b0.westeurope-01.azurewebsites.net/$1"
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*", "/assets/*", "/*.txt", "/*.xml", "/js/*"]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "globalHeaders": {
    "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.stripe.com https://m.stripe.network https://m.stripe.com https://analytics.tiktok.com https://accounts.google.com https://apis.google.com; connect-src 'self' https://zarium-app-ddbnb4egcpf4e6b0.westeurope-01.azurewebsites.net https://api.stripe.com https://m.stripe.network https://m.stripe.com https://*.azurestaticapps.net https://analytics.tiktok.com https://zarium.b2clogin.com https://*.b2clogin.com https://accounts.google.com https://apis.google.com https://oauth2.googleapis.com https://www.googleapis.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; frame-src https://js.stripe.com https://m.stripe.network https://hooks.stripe.com https://m.stripe.com https://zarium.b2clogin.com https://*.b2clogin.com https://accounts.google.com; form-action 'self' https://zarium.b2clogin.com https://*.b2clogin.com; worker-src 'self' blob:; font-src 'self' data: https://fonts.gstatic.com; upgrade-insecure-requests",
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block",
    "Access-Control-Allow-Credentials": "true",
    "Access-Control-Allow-Origin": "https://zarium.dev",
    "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
    "Access-Control-Allow-Headers": "Content-Type, Authorization, X-CSRF-Token, X-Requested-With"
  },
  "mimeTypes": {
    ".json": "text/json",
    ".xml": "application/xml",
    ".txt": "text/plain",
    ".webmanifest": "application/manifest+json",
    ".ico": "image/x-icon",
    ".png": "image/png"
  },
  "platformErrorOverrides": [
    {
      "errorType": "Unauthenticated",
      "statusCode": 302,
      "serve": "/.auth/login/aad"
    }
  ]
}